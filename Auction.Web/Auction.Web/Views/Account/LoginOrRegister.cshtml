@model LoginOrRegisterModel
@{
    Layout = "_LayoutEmpty";
}

<form asp-controller="Account" asp-action="Login" method="post">
    <div class="row">
        <h2>Login</h2>

        <div class="col-md-6">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="LoginModel.Username">
                    <span asp-validation-for="LoginModel.Username" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-4">
                <label class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="LoginModel.Password">
                    <span asp-validation-for="LoginModel.Password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
</form>
<form asp-controller="Account" asp-action="Register" method="post">
    <div class="row">
        <h2>Registration</h2>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" asp-for="RegisterModel.Username">
                        <span asp-validation-for="RegisterModel.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" asp-for="RegisterModel.Password">
                        <span asp-validation-for="RegisterModel.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="pwd">Confirm Password</label>
                        <input type="password" class="form-control" asp-for="RegisterModel.ConfirmPassword">
                        <span asp-validation-for="RegisterModel.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>FirstName</label>
                        <input type="text" class="form-control" asp-for="RegisterModel.FirstName">
                        <span asp-validation-for="RegisterModel.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>LastName</label>
                        <input type="text" class="form-control" asp-for="RegisterModel.LastName">
                        <span asp-validation-for="RegisterModel.LastName" class="text-danger"></span>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
        </div>
    </div>
</form>

